{
  "autoload": {
    "psr-4": {
      "myapp\\": "src/"
    }
  },
  "require-dev" : {
    "squizlabs/php_codesniffer": "3.*",
    "phpmd/phpmd" : "@stable",
    "phpunit/phpunit": "^9.5",
    "facebook/webdriver": "1.5.*"
  },
  "scripts": {
    "lint": [
      "composer install",
      "./vendor/bin/phpmd ./src/ text codesize,design,naming,unusedcode",
      "./vendor/bin/phpcs --standard=PSR2 --colors ./src/"
    ],
    "test": [
      "composer install",
      "./vendor/bin/phpunit ./src/"
    ]
  }
}
